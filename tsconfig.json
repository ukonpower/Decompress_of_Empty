{
  "compilerOptions": {
	"strict": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2021",
      "dom"
    ],
    "typeRoots": ["node_modules/@types"],
    "rootDir": "./",
	"baseUrl": ".",
	"paths": {
		"glpower" : ["./src/ts/libs/glpower/packages/glpower/src"],
		"~/*": ["src/*"]
	},
	"resolveJsonModule": true,
	"allowSyntheticDefaultImports": true
  },
  "include": ["./src/"]
} 